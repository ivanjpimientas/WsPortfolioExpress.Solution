@model CustomerViewModel
<div>
    <div class="row">
        <div class="col-md-12">
            <form id="customerForm" enctype="multipart/form-data" asp-area="" asp-controller="Customers" asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="SurName" class="control-label"></label>
                    <input asp-for="SurName" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Document" class="control-label"></label>
                    <input asp-for="Document" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="DocumentType" class="control-label"></label>
                    <input asp-for="DocumentType" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Imagen" class="control-label"></label>
                    <div class="custom-file">
                        <input type="hidden" id="Imagen" name="Imagen" />
                    </div>
                    <div class="row">
                        &nbsp;
                    </div>
                    @{
                        if (Model.Id > 0)
                        {
                            <div class="form-group text-center">
                                <img src="@Model.Imagen" class="img-thumbnail" width="100" asp-append-version="true" />
                            </div>
                        }
                    }
                </div>
                <div class="form-group justify-content-between">
                    <div class="row">
                        <button type="submit" id="btnSubmit" class="btn btn-block btn-info" style="width: 25%;">Si</button>
                        &nbsp;
                        <button type="button" class="btn btn-danger" onclick="onCloseModal(@Model.Id);" style="width: 15%;">No</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>